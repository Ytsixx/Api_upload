  <script>
    const socket = io();
    let currentUser = null;
    let selectedImageFile = null;
    let selectedAudioFile = null;
    let userAvatarBase64 = null;
    let sessionId = localStorage.getItem('chatSessionId');
    let replyToMessage = null;
    let editingMessageId = null;
    let typingTimeout = null;
    let currentEmojiPickerMessageId = null;

    console.log('üöÄ Aplica√ß√£o iniciada');

    // Upload de avatar no login
    document.getElementById('avatar-file-input').addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (!file) return;

      if (file.size > 5 * 1024 * 1024) {
        alert('A imagem deve ter no m√°ximo 5MB');
        return;
      }

      const reader = new FileReader();
      reader.onload = (event) => {
        userAvatarBase64 = event.target.result;
        document.getElementById('avatar-preview').src = userAvatarBase64;
      };
      reader.readAsDataURL(file);
    });

    // Atualizar preview do avatar com username
    document.getElementById('username-input').addEventListener('input', (e) => {
      const username = e.target.value.trim();
      if (!userAvatarBase64 && username) {
        document.getElementById('avatar-preview').src = 
          `https://ui-avatars.com/api/?name=${encodeURIComponent(username)}&background=random`;
      }
    });

    // Verificar sess√£o existente
    window.addEventListener('load', async () => {
      console.log('üîç Verificando sess√£o existente...');
      if (sessionId) {
        try {
          const response = await fetch('/api/check-user', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ sessionId })
          });

          const data = await response.json();
          console.log('üì• Resposta da verifica√ß√£o:', data);
          
          if (data.status === 'existing') {
            console.log('‚úÖ Usu√°rio existente encontrado, reconectando...');
            socket.emit('register', { 
              username: data.user.username, 
              avatar: data.user.avatar,
              sessionId: data.user.sessionId 
            });
          } else if (data.status === 'banned') {
            alert('Voc√™ est√° banido do chat');
            localStorage.removeItem('chatSessionId');
          } else {
            console.log('‚ÑπÔ∏è Nenhuma sess√£o v√°lida encontrada');
          }
        } catch (error) {
          console.error('‚ùå Erro ao verificar sess√£o:', error);
        }
      }
    });

    // Login
    document.getElementById('join-btn').addEventListener('click', async () => {
      const username = document.getElementById('username-input').value.trim();

      if (!username) {
        alert('Por favor, escolha um nome de usu√°rio');
        return;
      }

      console.log('üîê Tentando fazer login com:', username);

      try {
        const response = await fetch('/api/check-user', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ username })
        });

        const data = await response.json();
        console.log('üì• Resposta do check-user:', data);
        
        if (data.status === 'taken') {
          alert('Este nome de usu√°rio j√° est√° em uso');
          return;
        }

        const avatar = userAvatarBase64 || `https://ui-avatars.com/api/?name=${encodeURIComponent(username)}&background=random`;
        console.log('üì§ Enviando registro para o servidor...');
        socket.emit('register', { username, avatar });
      } catch (error) {
        console.error('‚ùå Erro no login:', error);
        alert('Erro ao conectar. Verifique se o servidor est√° rodando.');
      }
    });

    // Registrado com sucesso
    socket.on('registered', (user) => {
      console.log('‚úÖ Registrado com sucesso:', user);
      currentUser = user;
      localStorage.setItem('chatSessionId', user.sessionId);
      
      document.getElementById('login-screen').style.display = 'none';
      document.getElementById('chat-container').style.display = 'block';
      document.getElementById('current-username').textContent = user.username;
      document.getElementById('current-avatar').src = user.avatar;
      document.getElementById('status-badge').textContent = getStatusEmoji(user.status || 'Dispon√≠vel');
      
      if (user.isAdmin) {
        document.getElementById('current-username').innerHTML = 
          user.username + '<span class="admin-badge">ADMIN</span>';
        document.getElementById('admin-controls').style.display = 'block';
      }
    });

    // Username j√° em uso
    socket.on('username-taken', () => {
      console.log('‚ùå Username j√° est√° em uso');
      alert('Este nome de usu√°rio j√° est√° em uso');
    });

    // Banido
    socket.on('banned', (data) => {
      alert(data.message);
      localStorage.removeItem('chatSessionId');
      location.reload();
    });

    // Hist√≥rico de mensagens
    socket.on('message-history', (messages) => {
      console.log('üìú Recebido hist√≥rico de', messages.length, 'mensagens');
      messages.forEach(msg => addMessage(msg));
    });

    // Nova mensagem
    socket.on('new-message', (message) => {
      console.log('üí¨ Nova mensagem recebida:', message);
      addMessage(message);
    });

    // Mencionado
    socket.on('mentioned', (data) => {
      showNotification(`${data.by} mencionou voc√™!`);
    });

    // Digitando
    socket.on('typing-users', (users) => {
      const indicator = document.getElementById('typing-indicator');
      if (users.length === 0) {
        indicator.textContent = '';
      } else if (users.length === 1) {
        indicator.textContent = `${users[0]} est√° digitando...`;
      } else if (users.length === 2) {
        indicator.textContent = `${users[0]} e ${users[1]} est√£o digitando...`;
      } else {
        indicator.textContent = `${users.length} pessoas est√£o digitando...`;
      }
    });

    // Rea√ß√µes
    socket.on('message-reactions', (data) => {
      updateMessageReactions(data.messageId, data.reactions);
    });

    // Mensagem deletada
    socket.on('message-deleted', (data) => {
      const msgElement = document.querySelector(`[data-message-id="${data.messageId}"]`);
      if (msgElement) {
        msgElement.remove();
      }
    });

    // Mensagem editada
    socket.on('message-edited', (data) => {
      const msgElement = document.querySelector(`[data-message-id="${data.messageId}"]`);
      if (msgElement) {
        const textElement = msgElement.querySelector('.message-text');
        if (textElement) {
          textElement.innerHTML = processMessageText(data.newContent);
          const header = msgElement.querySelector('.message-header');
          if (!header.querySelector('.edited-badge')) {
            header.insertAdjacentHTML('beforeend', '<span class="edited-badge">editado</span>');
          }
        }
      }
    });

    // Chat limpo
    socket.on('chat-cleared', () => {
      document.getElementById('messages').innerHTML = '';
      addSystemMessage('O chat foi limpo pelo administrador');
    });

    // Usu√°rios online
    socket.on('online-users', (users) => {
      const container = document.getElementById('online-users');
      document.getElementById('online-count').textContent = users.length;
      container.innerHTML = users.map(user => `
        <div class="online-user">
          <img src="${user.avatar}" alt="${user.username}">
          <div class="online-user-info">
            <div class="online-user-name">
              ${user.username}
              ${user.isAdmin ? '<span class="admin-badge">ADMIN</span>' : ''}
            </div>
            <div class="online-user-status">${getStatusEmoji(user.status)} ${user.status || 'Dispon√≠vel'}</div>
          </div>
          <button class="mention-btn" onclick="mentionUser('${user.username}')">@</button>
          ${currentUser && currentUser.isAdmin && !user.isAdmin ? 
            `<button class="ban-btn" onclick="banUser('${user.username}')">üö´</button>` : 
            '<div class="status-dot"></div>'}
        </div>
      `).join('');
    });

    // Status atualizado
    socket.on('user-status-updated', (data) => {
      if (data.username === currentUser.username) {
        document.getElementById('status-badge').textContent = getStatusEmoji(data.status);
      }
    });

    // Usu√°rio entrou
    socket.on('user-joined', (data) => {
      addSystemMessage(`${data.username} entrou no chat`);
    });

    // Usu√°rio saiu
    socket.on('user-left', (data) => {
      addSystemMessage(`${data.username} saiu do chat`);
    });

    // Avatar atualizado
    socket.on('user-updated', (data) => {
      if (data.username === currentUser.username) {
        document.getElementById('current-avatar').src = data.avatar;
      }
    });

    // Erros
    socket.on('error', (data) => {
      console.error('‚ùå Erro do servidor:', data.message);
      alert('Erro: ' + data.message);
    });

    // Desconex√£o
    socket.on('disconnect', () => {
      console.log('üîå Desconectado do servidor');
      addSystemMessage('Desconectado do servidor. Tentando reconectar...');
    });

    // Reconex√£o
    socket.on('connect', () => {
      console.log('üîå Conectado ao servidor');
      if (currentUser) {
        console.log('üîÑ Reconectando usu√°rio...');
        socket.emit('register', {
          username: currentUser.username,
          avatar: currentUser.avatar,
          sessionId: currentUser.sessionId
        });
      }
    });

    // Enviar mensagem
    document.getElementById('message-form').addEventListener('submit', (e) => {
      e.preventDefault();
      const input = document.getElementById('message-input');
      let content = input.value.trim();
      
      if (!content) return;

      // Detectar men√ß√µes
      const mentions = [];
      const mentionRegex = /@(\w+)/g;
      let match;
      while ((match = mentionRegex.exec(content)) !== null) {
        mentions.push(match[1]);
      }

      const messageData = {
        type: 'text',
        content,
        mentions,
        replyTo: replyToMessage
      };

      socket.emit('send-message', messageData);
      input.value = '';
      input.style.height = 'auto';
      cancelReply();
      socket.emit('typing', false);
    });

    // Auto-resize textarea
    document.getElementById('message-input').addEventListener('input', (e) => {
      e.target.style.height = 'auto';
      e.target.style.height = Math.min(e.target.scrollHeight, 120) + 'px';

      // Indicador de digita√ß√£o
      clearTimeout(typingTimeout);
      socket.emit('typing', true);
      typingTimeout = setTimeout(() => {
        socket.emit('typing', false);
      }, 1000);
    });

    // Enter para enviar
    document.getElementById('message-input').addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        document.getElementById('message-form').dispatchEvent(new Event('submit'));
      }
    });

    // Adicionar mensagem
    function addMessage(msg) {
      const messagesDiv = document.getElementById('messages');
      const messageEl = document.createElement('div');
      messageEl.className = 'message';
      messageEl.setAttribute('data-message-id', msg._id);
      
      const time = new Date(msg.timestamp).toLocaleTimeString('pt-BR', { 
        hour: '2-digit', 
        minute: '2-digit' 
      });

      let replyHTML = '';
      if (msg.replyTo) {
        replyHTML = `
          <div class="message-reply" onclick="scrollToMessage('${msg.replyTo._id}')">
            <div class="message-reply-author">‚Ü©Ô∏è ${msg.replyTo.username}</div>
            <div>${truncateText(msg.replyTo.content, 50)}</div>
          </div>
        `;
      }

      let contentHTML = '';
      
      if (msg.type === 'text') {
        contentHTML = `<p class="message-text">${processMessageText(msg.content)}</p>`;
      } else if (msg.type === 'image') {
        contentHTML = `
          <div class="message-media">
            <img src="${msg.content}" class="message-image" alt="Imagem" onclick="window.open('${msg.content}', '_blank')">
            ${msg.fileName ? `<div class="file-info">üìé ${msg.fileName} (${formatFileSize(msg.fileSize)})</div>` : ''}
          </div>
        `;
      } else if (msg.type === 'audio') {
        contentHTML = `
          <div class="message-media">
            <div class="audio-container">
              <audio controls class="message-audio">
                <source src="${msg.content}">
              </audio>
            </div>
            ${msg.fileName ? `<div class="file-info">üìé ${msg.fileName} (${formatFileSize(msg.fileSize)})</div>` : ''}
          </div>
        `;
      } else if (msg.type === 'code') {
        const code = hljs.highlightAuto(msg.content.code, [msg.content.language]).value;
        contentHTML = `
          <div class="message-code">
            <div class="code-header">
              <span>${msg.content.language.toUpperCase()}</span>
              <span style="cursor:pointer" onclick="copyCode(this)" data-code="${escapeHtml(msg.content.code)}">üìã Copiar</span>
            </div>
            <pre><code>${code}</code></pre>
          </div>
        `;
      }

      const reactionsHTML = renderReactions(msg._id, msg.reactions || []);

      const isOwnMessage = currentUser && msg.username === currentUser.username;
      const canDelete = isOwnMessage || (currentUser && currentUser.isAdmin);

      messageEl.innerHTML = `
        <img src="${msg.avatar}" class="avatar" alt="${msg.username}">
        <div class="message-content">
          <div class="message-header">
            <strong>${msg.username}</strong>
            ${msg.isAdmin ? '<span class="admin-badge">ADMIN</span>' : ''}
            <small>${time}</small>
            ${msg.edited ? '<span class="edited-badge">editado</span>' : ''}
          </div>
          ${replyHTML}
          ${contentHTML}
          ${reactionsHTML}
          <div class="message-actions">
            <button class="message-action-btn" onclick="replyToMsg('${msg._id}', '${msg.username}', '${escapeHtml(msg.content)}')">‚Ü©Ô∏è</button>
            <button class="message-action-btn" onclick="toggleEmojiPicker('${msg._id}', this)">üòÄ</button>
            ${isOwnMessage && msg.type === 'text' ? `<button class="message-action-btn" onclick="editMessage('${msg._id}', '${escapeHtml(msg.content)}')">‚úèÔ∏è</button>` : ''}
            ${canDelete ? `<button class="message-action-btn" onclick="deleteMessage('${msg._id}')">üóëÔ∏è</button>` : ''}
          </div>
        </div>
      `;

      messagesDiv.appendChild(messageEl);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }

    // Processar texto da mensagem (men√ß√µes, links, etc)
    function processMessageText(text) {
      text = escapeHtml(text);
      text = text.replace(/@(\w+)/g, '<span class="mention">@$1</span>');
      text = text.replace(/(https?:\/\/[^\s]+)/g, '<a href="$1" target="_blank">$1</a>');
      return text;
    }

    // Renderizar rea√ß√µes
    function renderReactions(messageId, reactions) {
      if (!reactions || reactions.length === 0) return '<div class="message-reactions"></div>';

      const grouped = {};
      reactions.forEach(r => {
        if (!grouped[r.emoji]) grouped[r.emoji] = [];
        grouped[r.emoji].push(r.username);
      });

      const html = Object.keys(grouped).map(emoji => {
        const users = grouped[emoji];
        const isActive = currentUser && users.includes(currentUser.username);
        return `
          <div class="reaction ${isActive ? 'active' : ''}" 
               onclick="reactToMessage('${messageId}', '${emoji}')"
               title="${users.join(', ')}">
            <span>${emoji}</span>
            <span class="reaction-count">${users.length}</span>
          </div>
        `;
      }).join('');

      return `<div class="message-reactions">${html}</div>`;
    }

    // Atualizar rea√ß√µes
    function updateMessageReactions(messageId, reactions) {
      const msgElement = document.querySelector(`[data-message-id="${messageId}"]`);
      if (msgElement) {
        const reactionsContainer = msgElement.querySelector('.message-reactions');
        if (reactionsContainer) {
          reactionsContainer.outerHTML = renderReactions(messageId, reactions);
        }
      }
    }

    // Toggle emoji picker
    function toggleEmojiPicker(messageId, button) {
      const existingPicker = document.querySelector('.emoji-picker');
      if (existingPicker) {
        existingPicker.remove();
      }

      if (currentEmojiPickerMessageId === messageId) {
        currentEmojiPickerMessageId = null;
        return;
      }

      currentEmojiPickerMessageId = messageId;

      const picker = document.createElement('div');
      picker.className = 'emoji-picker show';
      picker.innerHTML = ['‚ù§Ô∏è', 'üëç', 'üòÇ', 'üòÆ', 'üò¢', 'üéâ', 'üî•', 'üëè'].map(emoji => 
        `<span class="emoji-option" onclick="reactToMessage('${messageId}', '${emoji}')">${emoji}</span>`
      ).join('');

      button.parentElement.appendChild(picker);

      setTimeout(() => {
        document.addEventListener('click', function closeEmojiPicker(e) {
          if (!e.target.closest('.emoji-picker') && !e.target.closest('.message-action-btn')) {
            picker.remove();
            currentEmojiPickerMessageId = null;
            document.removeEventListener('click', closeEmojiPicker);
          }
        });
      }, 100);
    }

    // Reagir a mensagem
    function reactToMessage(messageId, emoji) {
      socket.emit('react-message', { messageId, emoji });
      const picker = document.querySelector('.emoji-picker');
      if (picker) picker.remove();
      currentEmojiPickerMessageId = null;
    }

    // Responder mensagem
    function replyToMsg(messageId, username, content) {
      replyToMessage = {
        _id: messageId,
        username,
        content
      };

      document.getElementById('reply-preview').style.display = 'block';
      document.getElementById('reply-content').innerHTML = `
        <strong>‚Ü©Ô∏è Respondendo para ${username}</strong><br>
        ${truncateText(content, 100)}
      `;
      document.getElementById('message-input').focus();
    }

    function cancelReply() {
      replyToMessage = null;
      document.getElementById('reply-preview').style.display = 'none';
    }

    function scrollToMessage(messageId) {
      const msgElement = document.querySelector(`[data-message-id="${messageId}"]`);
      if (msgElement) {
        msgElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
        msgElement.style.background = '#fffacd';
        setTimeout(() => {
          msgElement.style.background = '';
        }, 2000);
      }
    }

    // Editar mensagem
    function editMessage(messageId, content) {
      editingMessageId = messageId;
      document.getElementById('edit-input').value = content.replace(/&lt;/g, '<').replace(/&gt;/g, '>').replace(/&amp;/g, '&');
      document.getElementById('edit-modal').style.display = 'flex';
    }

    function saveEdit() {
      const newContent = document.getElementById('edit-input').value.trim();
      if (!newContent) return;

      socket.emit('edit-message', {
        messageId: editingMessageId,
        newContent
      });

      closeEditModal();
    }

    function closeEditModal() {
      document.getElementById('edit-modal').style.display = 'none';
      editingMessageId = null;
    }

    // Deletar mensagem
    function deleteMessage(messageId) {
      if (confirm('Tem certeza que deseja deletar esta mensagem?')) {
        socket.emit('delete-message', { messageId });
      }
    }

    // Mencionar usu√°rio
    function mentionUser(username) {
      const input = document.getElementById('message-input');
      input.value += `@${username} `;
      input.focus();
    }

    // Alterar status
    function toggleStatusMenu() {
      const menu = document.getElementById('status-options');
      menu.classList.toggle('show');
    }

    function changeStatus(status) {
      socket.emit('update-status', { status });
      document.getElementById('status-options').classList.remove('show');
    }

    function getStatusEmoji(status) {
      const emojis = {
        'Dispon√≠vel': 'üü¢',
        'Ocupado': 'üî¥',
        'Ausente': 'üü°',
        'N√£o perturbe': '‚õî'
      };
      return emojis[status] || 'üìç';
    }

    // Mensagem do sistema
    function addSystemMessage(text) {
      const messagesDiv = document.getElementById('messages');
      const messageEl = document.createElement('div');
      messageEl.className = 'system-message';
      messageEl.textContent = text;
      messagesDiv.appendChild(messageEl);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }

    // Notifica√ß√£o
    function showNotification(text) {
      const notification = document.createElement('div');
      notification.className = 'notification-badge';
      notification.textContent = text;
      document.body.appendChild(notification);

      setTimeout(() => {
        notification.remove();
      }, 3000);
    }

    // Selecionar imagem
    function selectImage() {
      document.getElementById('image-input').click();
    }

    document.getElementById('image-input').addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (!file) return;

      if (file.size > 10 * 1024 * 1024) {
        alert('A imagem deve ter no m√°ximo 10MB');
        return;
      }

