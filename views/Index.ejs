      if (confirm('Tem certeza que deseja limpar todo o chat? Esta a√ß√£o n√£o pode ser desfeita!')) {
        socket.emit('clear-chat');
      }
    }

    // Utilit√°rios
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function formatFileSize(bytes) {
      if (bytes < 1024) return bytes + ' B';
      if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(2) + ' KB';
      return (bytes / (1024 * 1024)).toFixed(2) + ' MB';
    }

    function truncateText(text, length) {
      if (text.length <= length) return text;
      return text.substring(0, length) + '...';
    }

    // Fechar modais ao clicar fora
    window.addEventListener('click', (e) => {
      if (e.target.classList.contains('modal')) {
        e.target.style.display = 'none';
      }
      if (!e.target.closest('.status-badge') && !e.target.closest('.status-options')) {
        document.getElementById('status-options').classList.remove('show');
      }
    });

    // Solicitar permiss√£o de notifica√ß√£o
    if ('Notification' in window && Notification.permission === 'default') {
      Notification.requestPermission();
    }

