    function copyCode(element) {
      const code = element.getAttribute('data-code').replace(/&lt;/g, '<').replace(/&gt;/g, '>').replace(/&amp;/g, '&');
      navigator.clipboard.writeText(code).then(() => {
        element.textContent = '‚úÖ Copiado!';
