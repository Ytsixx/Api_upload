  <!-- Modal de Editar Mensagem -->
  <div id="edit-modal" class="modal">
    <div class="modal-content">
      <h2>‚úèÔ∏è Editar Mensagem</h2>
      <textarea id="edit-input" placeholder="Edite sua mensagem..."></textarea>
      <div class="modal-buttons">
        <button class="primary" onclick="saveEdit()">Salvar</button>
        <button class="secondary" onclick="closeEditModal()">Cancelar</button>
