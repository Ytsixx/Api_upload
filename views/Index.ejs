    // Fun√ß√µes admin
    function banUser(username) {
      if (confirm(`Tem certeza que deseja banir ${username}?`)) {
        socket.emit('ban-user', { username });
      }
    }

    function showBannedUsers() {
      document.getElementById('banned-modal').style.display = 'flex';
      document.getElementById('banned-users-list').innerHTML = '<div class="loading">Carregando...</div>';
      socket.emit('get-banned-users');
    }

    socket.on('banned-users-list', (bannedUsers) => {
      const container = document.getElementById('banned-users-list');
      if (bannedUsers.length === 0) {
        container.innerHTML = '<p style="text-align:center;padding:20px;color:#999;">Nenhum usu√°rio banido</p>';
      } else {
        container.innerHTML = bannedUsers.map(banned => `
          <div class="banned-user">
            <div>
              <strong>${banned.username}</strong>
              <br>
              <small style="color:#666;">Banido em: ${new Date(banned.bannedAt).toLocaleString('pt-BR')}</small>
            </div>
            <button class="unban-btn" onclick="unbanUser('${banned.username}')">Desbanir</button>
          </div>
        `).join('');
      }
    });

    function unbanUser(username) {
      if (confirm(`Desbanir ${username}?`)) {
        socket.emit('unban-user', { username });
        showBannedUsers();
      }
    }

    function closeBannedModal() {
      document.getElementById('banned-modal').style.display = 'none';
